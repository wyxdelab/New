<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".component.register.RegisterActivity">

    <include layout="@layout/toolbar_transparent_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_outer"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--昵称-->
        <EditText
            android:id="@+id/nickname"
            style="@style/EditText.SingleLine"
            android:hint="@string/enter_nickname"
            android:inputType="textEmailAddress" />

        <!--手机号输入框-->
        <EditText
            android:id="@+id/phone"
            style="@style/EditText.SingleLine"
            android:hint="@string/enter_phone"
            android:inputType="phone"
            android:maxLength="11" />

        <!--邮箱输入框-->
        <EditText
            android:id="@+id/email"
            style="@style/EditText.SingleLine"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress" />

        <!--密码输入框-->
        <EditText
            android:id="@+id/password"
            style="@style/EditText.SingleLine"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:maxLength="15" />

        <!--确认密码输入框-->
        <EditText
            android:id="@+id/confirm_password"
            style="@style/EditText.SingleLine"
            android:hint="@string/enter_confirm_password"
            android:inputType="textPassword"
            android:maxLength="15" />

        <!--登录按钮-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/primary"
            style="@style/SuperButton.Primary"
            android:layout_marginTop="@dimen/padding_large"
            android:text="@string/register_and_login" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>